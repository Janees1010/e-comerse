

<style>
    body{
        background-color: white;
    }
    section{
        margin-inline-start: 150px;
        margin-block-start: 60px;
        padding:20px;
    }
</style>

<section>
    <h1>Edit product</h1>
    <form action="/admin/edit-product/{{product._id}}" method="post" enctype="multipart/form-data">
        <label for="">Name</label><br>
        <input type="text" name="Name" value="{{product.Name}}"><br>

         <label for="">Category</label><br>
        <input type="text" name="Category" value="{{product.Category}}"><br>


        <label for="">Price</label><br>
        <input type="price" name="Price" value="{{product.Price}}"><br>

        <label for="">Description</label><br>
        <input type="text" name="Description" value="{{product.Description}}"><br>

        <label for="">Image</label>
        <img src="/product-images/{{product._id}}.jpg" alt="" width="100px" height="auto" id="img"><br>
        <input type="file" name="image" onchange="viewImage(event)"><br><br>

        <button type="submit" class="btn btn-danger">Submit</button>

    </form>
</section>  
<script>
   function viewImage(event){
    document.getElementById('img').src=URL.createObjectURL(event.target.files[0])

    }
</script>