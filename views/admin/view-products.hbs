    <section>
    <div class="container">

    <table class="table" id="Products-table">
        <div class="pt-2" >
            <a style="margin-left:950px;" href="/admin/add-product" class="btn btn-success ">Add product</a>
        </div>
   <thead>
    <tr>
      <th scope="col">Title</th>
      <th scope="col">Category</th>
      <th scope="col">Price</th>
      <th scope="col">Description</th>
      <th scope="col">image</th>
      <th scope="col">Options</th>
    </tr>
  </thead>

  <tbody>
     {{#each products}}
    <tr>
      <td>{{this.Name}}</td>
      <td>{{this.Category}}</td>
      <td>{{this.Price}}</td>
      <td>{{this.Description}}</td>
      <td><img src="/product-images/{{this._id}}.jpg" alt="" width="60px" height="50px"></td>
       <td>
        <a href="/admin/edit-product/{{this._id}}" class="btn btn-primary mx-4">Edit</a>
        <a href="/admin/delete-product/{{this._id}}" class="btn btn-danger">Delete</a>  
       </td>
    </tr>
   {{/each}}  
  </tbody>
</table>
</div>
</section>
<script>
   $(function () {
    $('#Products-table').DataTable();
});
</script>

